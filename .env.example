# ============================================
# Copy este archivo a .env.local y completa los valores
# ============================================

# ▶ DATABASE (PostgreSQL)
# Para desarrollo local: usa SQLite o Postgres local
# Para Vercel: usa Vercel Postgres
DATABASE_URL="postgresql://user:password@localhost:5432/misstna_dev"

# ▶ NEXTAUTH (Autenticación)
# Generar: openssl rand -base64 32
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="tu-secret-key-generado-aqui"

# ▶ LOCAL API (Tu máquina Windows con los bots)
# Debe correr: python local_api.py
LOCAL_API_URL="http://localhost:5000"
LOCAL_API_KEY="your-secure-api-key-here"

# ▶ REDIS (Caching - opcional)
# Para desarrollo: puede omitirse
REDIS_URL="redis://localhost:6379"

# ▶ EMAIL (Notificaciones - opcional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@misstna.app"

# ▶ VERCEL (Deployment)
# Obten el token de: https://vercel.com/account/tokens
VERCEL_API_TOKEN="your-vercel-token-here"

# ▶ FEATURE FLAGS
ENABLE_ADMIN_PANEL="true"
ENABLE_PREMIUM_FEATURES="true"
ENABLE_REAL_TIME_UPDATES="true"

# ▶ LOGGING
LOG_LEVEL="info"  # debug, info, warn, error
NODE_ENV="development"  # development, production
